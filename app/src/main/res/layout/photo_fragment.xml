<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e6e6e6"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:id="@+id/com"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="1dp"
            android:id="@+id/text"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="3"
                android:padding="10dp"
                android:id="@+id/linkTextPhoto"
                android:layout_marginRight="4dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/back"
                android:hint="Enter the link here"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:minWidth="1dp"
                app:cardBackgroundColor="#E8275E"
                app:cardCornerRadius="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Get Photo"
                        android:id="@+id/getContentButtonPhoto"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:padding="15sp"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/com"
        android:layout_above="@+id/downloadButton"
        android:layout_marginTop="15dp"
        android:layout_margin="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/particularPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/back"
            android:fitsSystemWindows="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/downloadButton"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_height="60dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#E8275E"
            android:padding="10dp"
            app:cardCornerRadius="15sp"
            android:layout_marginBottom="30sp"
            android:layout_height="60dp">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:id="@+id/downloadButtonPhoto"
                android:text="Download"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="14dp"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>